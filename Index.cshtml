@model DojoSurvey.Models.Home.Survey;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Dojo Survey</title>
</head>
<body>
    <div class="card">
        <div class="card-header text-center">
            <h3>Survey</h3>
        </div>
        <div class="card-body">
            <form action="/result" method="POST">
                <div class="form-group">
                    <span asp-validation-for="StudentName"></span>
                    <label for="Name">Name:</label>
                    <input type="text" class="form-control" name="StudentName">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Location"></span>
                    <label for="Location">Dojo Location:</label>
                    <select type="text" class="form-control" name="Location">
                        <option value="Bellevue, WA">Bellevue, WA</option>
                        <option value="Boise, ID">Boise, ID</option>
                        <option value="Chicago, IL">Chicago, IL</option>
                        <option value="Los Angeles, CA">Los Angeles, CA</option>
                        <option value="Silicon Valley">Silicon Valley</option>
                        <option value="Remote">Remote</option>
                    </select>
                </div>
                <div class="form-group">
                    <span asp-validation-for="FavLanguage"></span>
                    <label for="FavoriteLanguage">Favorite Language/Framework:</label>
                    <select type="text" class="form-control" name="FavLanguage">
                        <option value="C#">C#</option>
                        <option value="Javascript">Javascript</option>
                        <option value="Python">Python</option>
                        <option value="Ruby">Ruby</option>
                        <option value="MERN">MERN</option>
                        <option value="MEAN">MEAN</option>
                    </select>
                </div>
                <div class="form-group">
                    <span asp-validation-for="Comment"></span>
                    <label for="Comment">Comment (optional):</label>
                    <textarea class="form-control" name="Comment"rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Send</button>
            </form>
        </div>
    </div>
</body>
</html>